{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-west1",
      "memory": "512MiB"
    },
    "headers": {
      "source": "robots.txt",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    },
    "redirects": [
      {
        "source": "/blog",
        "destination": "/articles",
        "type": 301
      }
    ]
  }
}
